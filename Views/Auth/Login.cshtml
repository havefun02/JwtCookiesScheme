@model JwtCookiesScheme.Dtos.LoginRequest
@{
    ViewData["Title"] = "Login";
}
<div class="container m-3">
    <partial name="_Validation" />
    <form method="post" asp-action="Login" asp-controller="Auth" >
        @Html.AntiForgeryToken() <!-- Anti-Forgery Token -->

        <div class="form-group">
            <label asp-for="UserName">UserName</label>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-controle">

            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mt-3">
            <span>Don't have an account? </span>
            <a asp-action="Register" asp-controller="Auth" class="btn btn-link">Register here</a>
            <span>or change password? </span>
            <a asp-action="ChangePassword" asp-controller="Auth" class="btn btn-link">Reset here</a>
        </div>
    </form>
</div>
